<% 
    let yukseklik = '';
    //eğer index undefined ise tek makale gösteriliyordur.
    //eğer index bir sayı ise tüm makaleler gösteriliyordur.
    if (index == undefined) {
        yukseklik = "600";
    }else{
        const mod = index % 10;
        if (mod === 0) {
            yukseklik = "600"
        }else{
            yukseklik = "60" + mod; //yanyana olması için  metinsel olarak 60 yazıldı.
        }
        
    }
    
%> 
<div class="card mb-4">
    <img src="https://source.unsplash.com/random/800x<%= yukseklik %> " class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title" title="<%- makale.title.rendered %>"><%- index==undefined ? makale.title.rendered : makale.title.rendered.slice(0,30); %></h5>
      <p class="card-text"> <%- index==undefined ? makale.content.rendered : makale.excerpt.rendered.slice(0,50) %>
        <% if (index !== undefined) { %>
         ... <a href="/blog/<%= makale.id %> "> devamını oku</a></p>
        <% } %>
        
    </div>
</div>
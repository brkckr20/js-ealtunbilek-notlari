        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Kullanıcı Oluştur</h1>
                                <% if (locals.validation_error != undefined) { %>
                                    <%- include('./partials/_mesaj') %> 
                                <% } %>
                            </div>
                            <form class="user" action="/register" method="POST">
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="text" name="ad" value="<%= typeof ad != 'undefined' ? ad : '' %>" class="form-control form-control-user" id="exampleFirstName"
                                            placeholder="Adınız">
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="text" name="soyad" value="<%= typeof soyad != 'undefined' ? soyad : '' %>" class="form-control form-control-user" id="exampleLastName"
                                            placeholder="Soyadınız">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <input type="email" name="email" value="<%= typeof email != 'undefined' ? email : '' %>" class="form-control form-control-user" id="exampleInputEmail"
                                        placeholder="Email">
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="password" name="sifre" value="<%= typeof sifre != 'undefined' ? sifre : '' %>" class="form-control form-control-user"
                                            id="exampleInputPassword" placeholder="Şifre">
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="password" name="resifre" value="<%= typeof resifre != 'undefined' ? resifre : '' %>" class="form-control form-control-user"
                                            id="exampleRepeatPassword" placeholder="Şifrenizi Tekrar Yazın">
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                    Kullanıcı Oluştur
                                </button>
                                <hr>
                                <a href="/" class="btn btn-google btn-user btn-block">
                                    <i class="fab fa-google fa-fw"></i> Google ile giriş
                                </a>
                                <a href="/" class="btn btn-facebook btn-user btn-block">
                                    <i class="fab fa-facebook-f fa-fw"></i> Facebook ile giriş
                                </a>
                            </form>
                            <hr>
                            <div class="text-center">
                                <a class="small" href="/forgot_password">Şifremi Unuttum</a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="/login">Hesabın var mı? Giriş Yap</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

